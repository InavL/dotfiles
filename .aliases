# easy to navigation
alias ..='cd ..'
alias cd..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

# easy report
alias l='ls -lFh'
alias la='ls -lAFh'
alias lr='ls -tRFh'
alias ll='ls -l'
alias lsd='ls -lFh | grep "^d"'
alias lad='ls -lFah | grep "^d"'
alias ldot='ls -ld .*'
alias lS='ls -1FSsh'
alias lart='ls -1Fcart'
alias lrt='ls -1Fcrt'
alias dud='du -d 1 -h'
alias duf='du -sh *'
alias fd='find . -type d -name'
alias ff='find . -type f -name'
alias h='history'
alias cp='cp -i -v'
alias mv='mv -i -v'
alias rm='rm -i'
alias rmf='rm -rf'
alias hgrep="fc -El 0 | grep"
alias lgrep="ls -lFh | grep"
alias help='man'
alias p='ps axo pid,user,pcpu,comm'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS}'
alias uptime='uptime -p'
alias free='free -h'
alias df='df -h | grep sd |\
    sed -e "s_/dev/sda[1-9]_\x1b[34m&\x1b[0m_" |\
    sed -e "s_/dev/sd[b-z][1-9]_\x1b[33m&\x1b[0m_" |\
    sed -e "s_[,0-9]*[MG]_\x1b[36m&\x1b[0m_" |\
    sed -e "s_[0-9]*%_\x1b[32m&\x1b[0m_" |\
    sed -e "s_9[0-9]%_\x1b[31m&\x1b[0m_" |\
    sed -e "s_/mnt/[-_A-Za-z0-9]*_\x1b[34;1m&\x1b[0m_"'

# bookmarks
alias dl='cd ~/Downloads; la'
alias doc='cd ~/Documents; la'
alias tmp='cd ~/Temporary; la'

# shortcuts
alias artisan='php artisan'
alias c='clear'
alias cat='ccat'
alias ch='echo "" > ~/.bash_history && echo "" > ~/.zsh_history'
alias e='exit'
alias fresh='cd; clear'
alias g='git'
alias git-pull-subdir='find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} pull \;'
alias incognito='unset HISTFILE'
alias ln='ln -s'
alias mp3-dl='youtube-dl --audio-quality 1 --extract-audio --audio-format mp3'
alias phpunit='vendor/bin/phpunit'
alias python='python3.4'
alias weather='curl -s wttr.in/Ponorogo | sed -n "1,17p"'
alias zshrc='$EDITOR ~/.zshrc'

# typos
alias :q!='exit'
alias nano='vim'
alias quit='exit'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# editor, server & config
alias nginx-conf='$EDITOR /etc/nginx/sites-available/default'
