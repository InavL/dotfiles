#!/bin/bash

magenta='\e[1;35m'
white='\e[0;37m'

echo -e $magenta"\n Stop PHP7-FPM... \n"$white
sudo service php7.0-fpm stop

echo -e $magenta"\n Stop MySQL... \n"$white
sudo service mysql stop

echo -e $magenta"\n Stop NGINX... \n"$white
sudo service nginx stop

echo -e $magenta"\n Stop Memcached... \n"$white
sudo service memcached stop
